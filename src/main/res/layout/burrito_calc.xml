<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calc_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp">

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="7dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/macaroni"
                android:elevation="20dp">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Double-Wrapped Tortilla"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/black"/>

                <RadioButton android:id="@+id/burrito_radio_double_tortilla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_no_double_tortilla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:onClick="onRadioButtonClicked"/>

            </RadioGroup>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="7dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/macaroni"
                android:elevation="20dp">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rice"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/black"/>

                <RadioButton android:id="@+id/burrito_radio_white_rice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="White Rice"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_brown_rice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brown Rice"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_no_rice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:onClick="onRadioButtonClicked"/>

            </RadioGroup>


            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="7dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/macaroni"
                android:elevation="20dp">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beans"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/black"/>

                <RadioButton android:id="@+id/burrito_radio_black_beans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Black Beans"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_no_beans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:onClick="onRadioButtonClicked"/>


            </RadioGroup>



            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="7dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/macaroni"
                android:elevation="20dp">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/black"/>

                <RadioButton android:id="@+id/burrito_radio_chicken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicken"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_steak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steak"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_ground_beef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ground Beef"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_smoked_brisket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smoked Brisket"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_pulled_pork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pulled Pork"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_fajita_veggies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fajita Vegetables"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_impossible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Impossible (plant-based)"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="7dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/macaroni"
                android:elevation="20dp">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extra Protein"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/black"/>

                <RadioButton android:id="@+id/burrito_radio_extra_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_no_extra_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:onClick="onRadioButtonClicked"/>


            </RadioGroup>



            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="7dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/macaroni"
                android:elevation="20dp">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Queso"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/black"/>

                <RadioButton android:id="@+id/burrito_radio_queso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Queso"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/burrito_radio_no_queso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>


            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="7dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/macaroni"
                android:elevation="20dp">


                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toppings"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </TextView>


                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/black"/>


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pico de Gallo"
                    android:id="@+id/checkbox_pico"
                    android:onClick="onCheckboxClicked"/>



                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salsa Verde"
                    android:id="@+id/burrito_checkbox_salsa_verde"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salsa Roja"
                    android:id="@+id/burrito_checkbox_salsa_roja"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habanero Salsa"
                    android:id="@+id/burrito_checkbox_habanero_salsa"
                    android:onClick="onCheckboxClicked"/>


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Corn"
                    android:id="@+id/burrito_checkbox_corn"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guacamole"
                    android:id="@+id/burrito_checkbox_guacamole"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jalapenos"
                    android:id="@+id/burrito_checkbox_jalapenos"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shredded Cheese"
                    android:id="@+id/burrito_checkbox_shredded_cheese"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sour Cream"
                    android:id="@+id/burrito_checkbox_sour_cream"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Onions"
                    android:id="@+id/burrito_checkbox_onions"
                    android:onClick="onCheckboxClicked"/>

            </LinearLayout>


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="10dp"
            android:paddingBottom="7dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/macaroni"
            android:elevation="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Calories:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:id="@+id/burrito_num_calories" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="Protein:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:id="@+id/burrito_num_protein" />


        </LinearLayout>





        </LinearLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
